<p style="color: green"><%= notice %></p>

<h1>Teams</h1>

<div>
  <%= link_to "Home", root_path %>
</div>

<div id="teams">
  <table>
    <thead>
      <tr>
        <th>Team Name</th>
        <th>Group</th>
        <th>Registration Date</th>
      </tr>
    </thead>

    <tbody>
      <% @teams.each do |t| %>
        <tr>
          <td><%= t.name %></td>
          <td><%= t.group %></td>
          <td><%= t.registration_date %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


